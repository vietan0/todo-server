{
  "name": "todo-server",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "prisma": {
    "seed": "psql -qtf prisma/dump.sql"
  },
  "scripts": {
    "build": "tsc",
    "check": "npm-run-all -p type lint prettier pretpkg test:once",
    "coverage": "vitest run --coverage",
    "dev": "npm-run-all -p dev-server postman studio",
    "dev-server": "tsx watch src",
    "dump": "pg_dump -Ccd todo-server -f prisma/dump.sql",
    "erd": "prisma generate && start prisma/erd.svg",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "mig": "prisma migrate dev --name",
    "postman": "bash postman.sh",
    "prepare": "husky",
    "pretpkg": "prettier-package-json --write --config pretpkg.json",
    "prettier": "prettier . --write",
    "start": "node dist/src",
    "studio": "prisma studio",
    "test": "vitest",
    "test:once": "vitest run",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "type": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lexorank": "^1.0.5",
    "morgan": "^1.10.0",
    "tozod": "^3.0.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@faker-js/faker": "^8.4.1",
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "@stylistic/eslint-plugin": "^1.8.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.23",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@vitest/coverage-istanbul": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "eslint": "^8.57.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.2.5",
    "prettier-package-json": "^2.8.0",
    "prisma": "^5.22.0",
    "prisma-erd-generator": "^1.11.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
